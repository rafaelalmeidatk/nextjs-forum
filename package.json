{
  "name": "nextjs-forum",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:bot": "turbo run build --filter=bot...",
    "start": "turbo run start",
    "start:bot": "turbo run start --filter=bot",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "migrate": "pnpm workspace @nextjs-forum/db migrate",
    "register-commands": "pnpm workspace @nextjs-forum/bot register-commands",
    "dev:register-commands": "pnpm workspace @nextjs-forum/bot dev:register-commands",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@nextjs-forum/eslint-config-custom": "workspace:*",
    "husky": "^8.0.3",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "turbo": "^1.10.16"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "lint-staged": {
    "*.{js,ts,tsx,md,json}": "prettier --write"
  },
  "resolutions": {
    "@types/react": "18.2.15"
  }
}
