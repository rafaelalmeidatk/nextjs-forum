{
  "name": "@nextjs-forum/db",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "./node.ts",
  "scripts": {
    "build": "tsc --build",
    "migrate": "node --env-file=.env ./migrate.ts",
    "migrate:down": "MIGRATE_OP=down node --env-file=.env ./migrate.ts",
    "migrate:list": "MIGRATE_OP=list node --env-file=.env ./migrate.ts",
    "db-codegen": "kysely-codegen --dialect postgres --out-file ./schema.ts",
    "lint": "eslint ."
  },
  "dependencies": {
    "kysely": "0.28.7",
    "pg": "8.16.3"
  },
  "devDependencies": {
    "@nextjs-forum/tsconfig": "workspace:*",
    "@types/pg": "8.15.5",
    "kysely-codegen": "0.19.0",
    "typescript": "5.9.2"
  }
}
