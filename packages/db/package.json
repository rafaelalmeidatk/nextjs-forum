{
  "name": "@nextjs-forum/db",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc --build",
    "migrate": "NODE_OPTIONS='--loader ts-node/esm' ts-node ./migrate.ts",
    "migrate:down": "MIGRATE_OP=down node --experimental-strip-types ./migrate.ts",
    "migrate:list": "MIGRATE_OP=list node --experimental-strip-types ./migrate.ts",
    "db-codegen": "kysely-codegen --dialect postgres --out-file ./schema.ts",
    "lint": "eslint ."
  },
  "exports": {
    "./node": {
      "import": "./build/node.js"
    },
    "./nextjs": {
      "import": "./build/nextjs.js"
    }
  },
  "dependencies": {
    "kysely": "^0.27.3",
    "kysely-planetscale": "^1.3.0",
    "pg": "^8.11.4"
  },
  "devDependencies": {
    "@nextjs-forum/tsconfig": "workspace:*",
    "@types/pg": "^8.11.4",
    "dotenv": "^16.4.5",
    "kysely-codegen": "^0.14.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}
