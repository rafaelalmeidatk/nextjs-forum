{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": ["DATABASE_URL", "REVALIDATE_SECRET", "NEXT_PUBLIC_VERCEL_URL"],
  "pipeline": {
    "dev": { "cache": false },
    "start": { "cache": false },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["build/**", ".next/**"]
    },
    "lint": {
      "outputs": []
    }
  }
}
